{
  "compilerOptions": {
    /* 基础配置 */
    "target": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "removeComments": false,
    "declaration": true,
    "sourceMap": true,

    /* 强类型检查配置 */
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,

    /* 模块分析配置 */
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "src/index.ts"
  ]
}
